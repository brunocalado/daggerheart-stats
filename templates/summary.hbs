<div class="summary-content">
    
    <!-- GM SECTION (Black & Gold) -->
    {{#if gm}}
    <div class="gm-card">
        <div class="gm-header">
            <div class="gm-header-title">
                <i class="fas fa-skull"></i>
                <span>{{gm.name}} (GM)</span>
            </div>
            <div class="gm-header-date">
                Period: {{gm.period}}
            </div>
        </div>

        <div class="gm-grid">
            <!-- Row 1 -->
            <div class="gm-stat"><label>Crit:</label><span>{{gm.crits}}</span></div>
            <div class="gm-stat"><label>Fumble:</label><span>{{gm.fumbles}}</span></div>
            <div class="gm-stat"><label>Hits:</label><span>{{gm.hits}}</span></div>
            <div class="gm-stat"><label>Misses:</label><span>{{gm.misses}}</span></div>
            <div class="gm-stat"><label>Avg:</label><span>{{gm.avg}}</span></div>
            
            <!-- Row 2 -->
            <div class="gm-stat"><label>Fear Earned:</label><span class="gold">{{gm.fearEarned}}</span></div>
            <div class="gm-stat"><label>Fear Spent:</label><span>{{gm.fearSpent}}</span></div>
            <div class="gm-stat"><label>Min:</label><span>{{gm.min}}</span></div>
            <div class="gm-stat"><label>Max:</label><span>{{gm.max}}</span></div>
            <div class="gm-stat"><label>Count:</label><span>{{gm.totalD20}}</span></div>
        </div>
    </div>
    {{/if}}

    <!-- PLAYERS SECTION (White & Clean) -->
    <div class="player-list">
        {{#each players}}
        <div class="player-row">
            
            <!-- Absolute Color Bar (Top to Bottom) -->
            <div class="color-bar" style="background-color: {{this.color}};"></div>

            <!-- Col 1: Identity (Centered Name) -->
            <div class="player-identity">
                <div class="player-name">{{this.name}}</div>
            </div>

            <!-- Col 2: Resources (Pills) -->
            <div class="stat-group">
                <div class="stat-pill">
                    <span class="pill-label">Hope Rolls</span>
                    <span class="pill-value">{{this.hopeRolls}}</span>
                </div>
                <div class="stat-pill">
                    <span class="pill-label">Hope Earn</span>
                    <span class="pill-value">{{this.hopeEarned}}</span>
                </div>
            </div>

            <!-- Col 3: Fear (Pills) - Using Fear data from context -->
            <div class="stat-group">
                <div class="stat-pill">
                    <span class="pill-label">Fear Rolls</span>
                    <span class="pill-value">{{this.fearRolls}}</span>
                </div>
                <div class="stat-pill">
                    <span class="pill-label">Fear Gen</span>
                    <span class="pill-value">{{this.fearGen}}</span>
                </div>
            </div>

            <!-- Col 4: Combat & Stats (Grid) -->
            <div class="stat-group">
                <div class="combat-grid">
                    <!-- Row 1 -->
                    <div class="combat-box">
                        <span class="combat-label">Hits</span>
                        <span class="combat-val">{{this.hits}}</span>
                    </div>
                    <div class="combat-box">
                        <span class="combat-label">Crit</span>
                        <span class="combat-val">{{this.crits}}</span>
                    </div>
                    <div class="combat-box">
                        <span class="combat-label">Miss</span>
                        <span class="combat-val">{{this.misses}}</span>
                    </div>
                    <!-- Row 2 -->
                    <div class="combat-box">
                        <span class="combat-label">Min</span>
                        <span class="combat-val">{{this.min}}</span>
                    </div>
                    <div class="combat-box">
                        <span class="combat-label">Max</span>
                        <span class="combat-val">{{this.max}}</span>
                    </div>
                    <div class="combat-box highlight">
                        <span class="combat-label">Avg</span>
                        <span class="combat-val">{{this.avg}}</span>
                    </div>
                </div>
            </div>

            <!-- Col 5: Badges -->
            <div class="player-badges">
                {{#each this.badges}}
                <span class="badge {{this.class}}" data-tooltip="{{this.tooltip}}">
                    {{#if this.icon}}<i class="{{this.icon}}"></i> {{/if}}{{this.label}}
                </span>
                {{/each}}
            </div>

        </div>
        {{/each}}
    </div>
</div>