<div class="summary-content">
    
    <!-- GM SECTION -->
    {{#if gm}}
    <div class="gm-card">
        <h3>
            <span><i class="fas fa-skull"></i> {{gm.name}} (GM)</span>
            <span style="font-size: 0.8em;">Period: {{gm.period}}</span>
        </h3>
        <div class="gm-grid">
            <div class="gm-stat"><label>Crit:</label><span>{{gm.crits}}</span></div>
            <div class="gm-stat"><label>Fumble:</label><span>{{gm.fumbles}}</span></div>
            <div class="gm-stat"><label>Hits:</label><span>{{gm.hits}}</span></div>
            <div class="gm-stat"><label>Misses:</label><span>{{gm.misses}}</span></div>
            <div class="gm-stat"><label>Avg:</label><span>{{gm.avg}}</span></div>
            
            <div class="gm-stat"><label>Fear Earned:</label><span>{{gm.fearEarned}}</span></div>
            <div class="gm-stat"><label>Fear Spent:</label><span>{{gm.fearSpent}}</span></div>
            <div class="gm-stat"><label>Min:</label><span>{{gm.min}}</span></div>
            <div class="gm-stat"><label>Max:</label><span>{{gm.max}}</span></div>
            <div class="gm-stat"><label>Count:</label><span>{{gm.totalD20}}</span></div>
        </div>
    </div>
    {{/if}}

    <hr class="stats-separator">

    <!-- PLAYERS SECTION -->
    <div class="player-list">
        {{#each players}}
        <div class="player-card">
            <!-- Header Flex: Name (left) | Badges (right) -->
            <div class="player-header">
                <div class="player-identity">
                    <div class="color-dot" style="background-color: {{this.color}};"></div>
                    {{this.name}}
                </div>
                
                <div class="player-badges">
                    {{#each this.badges}}
                    <span class="badge {{this.class}}" data-tooltip="{{this.tooltip}}">{{this.label}}</span>
                    {{/each}}
                </div>
            </div>

            <div class="player-stats-grid">
                <!-- Row 1 -->
                <div class="p-stat"><label>Hope Rolls:</label><span>{{this.hopeRolls}}</span></div>
                <div class="p-stat"><label>Crits:</label><span>{{this.crits}}</span></div>
                <div class="p-stat"><label>Hits:</label><span>{{this.hits}}</span></div>
                <div class="p-stat"><label>Misses:</label><span>{{this.misses}}</span></div>
                <div class="p-stat"><label>Avg Roll:</label><span>{{this.avg}}</span></div>
                
                <!-- Row 2 -->
                <div class="p-stat"><label>Fear Rolls:</label><span>{{this.fearRolls}}</span></div>
                <div class="p-stat"><label>Hope Earned:</label><span>{{this.hopeEarned}}</span></div>
                <div class="p-stat"><label>Fear Gen:</label><span>{{this.fearGen}}</span></div>
                <div class="p-stat"><label>Min:</label><span>{{this.min}}</span></div>
                <div class="p-stat"><label>Max:</label><span>{{this.max}}</span></div>
            </div>
        </div>
        {{/each}}
    </div>
</div>