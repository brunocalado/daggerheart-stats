<div class="trends-content">
    <!-- Selections -->
    <div class="trends-header">
        <div class="floating-label-group">
            <span class="input-label">User</span>
            <select id="trends-user-select" class="compact-select">{{{userOptions}}}</select>
        </div>
        <div class="floating-label-group">
            <span class="input-label">From</span>
            <select id="trends-from-date" class="compact-select">{{{dateOptionsFrom}}}</select>
        </div>
        <div class="floating-label-group">
            <span class="input-label">To</span>
            <select id="trends-to-date" class="compact-select">{{{dateOptionsTo}}}</select>
        </div>
    </div>

    <!-- Metric Selection Buttons (Dynamic based on user type) -->
    <div class="trends-metric-buttons" id="trends-metric-buttons">
        <!-- Buttons will be injected dynamically via JS -->
    </div>

    <!-- Canvas for Chart -->
    <div class="trends-chart-wrapper">
        <canvas id="trends-chart"></canvas>
    </div>
</div>
